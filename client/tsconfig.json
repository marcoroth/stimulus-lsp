  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "lib": ["ES2019"],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true
  },
  "include": [
    "src",
    "src/**/*.ts",
    "@types/**/*.d.ts",
  ],
  "exclude": ["node_modules", ".vscode-test"],
  "types": [
    "node"
  ]
}
