{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["ES2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "out",
    "rootDir": "src"
  },
  "include": [
    "src",
    "src/**/*.ts",
    "@types/**/*.d.ts",
  ],
  "exclude": ["node_modules", ".vscode-test"]
}
